// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model MedicalTextData {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @updatedAt
  originalText     String
  annotatedText    String
  task             String
  confidence       Float     @default(0)
  annotateReason   String?
  annotateTime     Int       @default(0)
  User             User?     @relation(fields: [userId], references: [id])
  userId           String?   @db.ObjectId
  batchNumber      Int       @default(0)
  batchPerformance Float     @default(0)
}

model User {
  id           String            @id @default(auto()) @map("_id") @db.ObjectId
  email        String            @unique
  name         String
  role         String
  createdAt    DateTime?         @default(now())
  updatedAt    DateTime?         @updatedAt
  medicalTexts MedicalTextData[]
}

model Settings {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  userId              String   @db.ObjectId
  confidenceThreshold Float    @default(0.5)
  dataPerBatch        Int      @default(100)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
